#首先需要docker
docker pull whyour/qinglong:latest
#容器配置
docker run -dit \
   -v $PWD/ql/config:/ql/config \
   -v $PWD/ql/log:/ql/log \
   -v $PWD/ql/db:/ql/db \
   -v $PWD/ql/jbot:/ql/jbot \
   -v $PWD/ql/raw:/ql/raw \
   -v $PWD/ql/repo:/ql/repo \
   -v $PWD/ql/scripts:/ql/scripts \
   -p 5700:5700 \
   --name qinglong \
   --hostname qinglong \
   --restart always \
   whyour/qinglong:latest
